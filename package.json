{
  "name": "verofield",
  "version": "1.0.0",
  "private": true,
  "description": "VeroField - Complete Pest Control Operations Platform",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/api && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd apps/api && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:common": "cd libs/common && npm run build",
    "install:all": "npm install && cd apps/api && npm install && cd ../../libs/common && npm install && cd ../../frontend && npm install",
    "start": "npm run start:backend",
    "start:backend": "cd apps/api && npm run start:prod",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd apps/api && npm test",
    "test:frontend": "cd frontend && npm test",
    "db:generate": "cd libs/common && npm run prisma:generate",
    "db:migrate": "cd libs/common && npm run prisma:migrate",
    "db:push": "cd libs/common && npm run prisma:push",
    "db:studio": "cd libs/common && npm run prisma:studio"
  },
  "devDependencies": {
    "@aduh95/viz.js": "^3.4.0",
    "@hpcc-js/wasm": "^2.29.0",
    "@resvg/resvg-js": "^2.6.2",
    "@viz-js/viz": "^3.7.0",
    "concurrently": "^8.2.2",
    "madge": "^8.0.0",
    "svg2png-wasm": "^1.4.1"
  },
  "dependencies": {
    "sonner": "^2.0.7"
  }
}
