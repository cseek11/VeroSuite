{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["apps/web/src/*"],
      "@app/*": ["apps/*"],
      "@libs/*": ["libs/*"],
      "@common/*": ["libs/common/src/*"],
      "@types/*": ["types/*"],
      "@verofield/common": ["libs/common/src"],
      "@verofield/common/*": ["libs/common/src/*"]
    }
  },
  "include": ["apps/web", "libs", "shared", "types"],
  "exclude": ["node_modules", "dist"]
}



