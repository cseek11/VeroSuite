{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020", "DOM"],
    "noEmit": true,
    "types": ["node", "jest", "vitest", "vite/client", "playwright"]
  },
  "include": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "tests",
    "apps/api/test"
  ],
  "exclude": ["node_modules", "dist"]
}

