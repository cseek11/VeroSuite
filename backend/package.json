{
  "name": "verofield-api",
  "version": "1.0.0",
  "private": true,
  "description": "VeroField Backend API - NestJS multi-tenant with RLS",
  "license": "MIT",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "start:test": "NODE_ENV=test nest start",
    "build": "nest build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --config ./test/enterprise-testing.config.js --testPathPattern=unit",
    "test:integration": "jest --config ./test/enterprise-testing.config.js --testPathPattern=integration",
    "test:security": "jest --config ./test/enterprise-testing.config.js --testPathPattern=security",
    "test:performance": "jest --config ./test/enterprise-testing.config.js --testPathPattern=performance",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:component": "jest --config ./test/enterprise-testing.config.js --testPathPattern=component",
    "test:workflow": "jest --config ./test/enterprise-testing.config.js --testPathPattern=workflow",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:performance && npm run test:e2e",
    "test:setup": "npm run db:generate && npm run db:push",
    "test:quality:report": "jest --config ./test/enterprise-testing.config.js --coverage --coverageReporters=html,text,lcov",
    "test:performance:thresholds": "k6 run test/performance/load-testing.js",
    "test:security:score": "npm audit --audit-level=high",
    "load:test": "k6 run test/performance/load-testing.js",
    "stress:test": "k6 run test/performance/stress-testing.js",
    "dashboard:generate": "node scripts/generate-dashboard.js",
    "dashboard:open": "start coverage/testing-dashboard.html",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^3.0.0",
    "@nestjs/swagger": "^7.1.0",
    "@prisma/client": "^5.0.0",
    "@stripe/stripe-js": "^7.9.0",
    "@supabase/supabase-js": "^2.38.0",
    "@types/multer": "^2.0.0",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "multer": "^2.0.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "rxjs": "^7.8.1",
    "stripe": "^18.5.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.0",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^6.0.0",
    "jest": "^29.5.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "k6": "^0.0.0",
    "prisma": "^5.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
