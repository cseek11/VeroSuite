# VeroField Secrets Template
# IMPORTANT: Do NOT commit actual secrets to version control
# Copy this file to secrets.yaml and fill in real values
# Then apply with: kubectl apply -f secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: verofield-secrets
  namespace: verofield
type: Opaque
stringData:
  # Database connection string
  # Format: postgresql://user:password@host:port/database?schema=public
  database-url: "postgresql://user:password@localhost:5432/verofield"
  
  # Supabase configuration
  supabase-url: "https://your-project.supabase.co"
  supabase-service-key: "your-supabase-service-role-key-here"
  supabase-anon-key: "your-supabase-anon-key-here"
  
  # JWT configuration
  jwt-secret: "your-super-secret-jwt-key-at-least-32-chars"
  jwt-refresh-secret: "your-refresh-token-secret-key"
  
  # Redis password (optional but recommended)
  redis-password: "your-redis-password"
  
  # Stripe keys (if using billing)
  stripe-secret-key: "sk_live_your_stripe_secret_key"
  stripe-webhook-secret: "whsec_your_webhook_secret"
  
  # Other API keys
  sentry-dsn: "https://your-sentry-dsn@sentry.io/project-id"
  
---
# TLS Certificate Secret (for HTTPS)
# Generate with cert-manager or provide manually
apiVersion: v1
kind: Secret
metadata:
  name: verofield-tls
  namespace: verofield
type: kubernetes.io/tls
data:
  # Base64 encoded certificate and key
  tls.crt: <base64-encoded-certificate>
  tls.key: <base64-encoded-private-key>


