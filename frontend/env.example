# VeroField Frontend Environment Configuration

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Feature Flags for V4 Migration
# Set to 'true' to enable V4 features, 'false' to disable
VITE_V4_LAYOUT=true
VITE_V4_DASHBOARD=true
VITE_V4_SCHEDULER=true
VITE_UNIFIED_SCHEDULER=false
VITE_V4_NAVIGATION=true

# Gradual Rollout Control (0-100)
# 0 = no users see V4, 100 = all users see V4
VITE_V4_ROLLOUT_PERCENTAGE=100

# Emergency Controls
# Set to 'true' to force emergency rollback (disables all V4 features)
VITE_EMERGENCY_ROLLBACK=false

# Development Settings
VITE_DEV_MODE=true
VITE_ENABLE_LOGGING=true

# Authentication
VITE_AUTH_DOMAIN=your-auth-domain
VITE_AUTH_CLIENT_ID=your-client-id

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Map Configuration
VITE_MAP_API_KEY=your-map-api-key
VITE_DEFAULT_LAT=40.4406
VITE_DEFAULT_LNG=-79.9959

# Notification Settings
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_NOTIFICATION_SOUND=true

# Performance
VITE_ENABLE_CACHE=true
VITE_CACHE_DURATION=3600

# Monitoring & Logging
VITE_SENTRY_DSN=your-sentry-dsn-here
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_ENABLE_ANALYTICS=false
