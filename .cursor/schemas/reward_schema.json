{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Reward Score Artifact",
  "type": "object",
  "required": ["score", "breakdown", "metadata"],
  "properties": {
    "score": {
      "type": "number",
      "description": "Overall reward score for the PR"
    },
    "breakdown": {
      "type": "object",
      "description": "Category-level scoring details"
    },
    "metadata": {
      "type": "object",
      "required": ["pr", "computed_at"],
      "properties": {
        "pr": {
          "type": ["string", "number"],
          "description": "Associated PR number"
        },
        "computed_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "file_scores": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}


