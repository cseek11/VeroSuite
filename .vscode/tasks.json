{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Auto-PR Session Manager",
      "type": "shell",
      "command": "python ${workspaceFolder}/.cursor/scripts/start_session_manager.py",
      "options": {
        "env": {
          "PYTHONUNBUFFERED": "1",
          "VSCODE_TASK": "1"
        }
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "never",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "isBackground": true
    },
    {
      "label": "Start Auto-Enforcement System",
      "type": "shell",
      "command": "python ${workspaceFolder}/.cursor/scripts/watch-files.py",
      "options": {
        "env": {
          "PYTHONUNBUFFERED": "1"
        }
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "never",
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "isBackground": true
    },
    {
      "label": "Run Enforcement Check",
      "type": "shell",
      "command": "python ${workspaceFolder}/.cursor/scripts/auto-enforcer.py",
      "problemMatcher": []
    },
    {
      "label": "Run Pre-Flight Check",
      "type": "shell",
      "command": "python ${workspaceFolder}/.cursor/scripts/pre-flight-check.py",
      "problemMatcher": []
    },
    {
      "label": "Run Enforcement Test Suite",
      "type": "shell",
      "command": "python ${workspaceFolder}/.cursor/scripts/test-enforcement.py",
      "args": ["--run-automated"],
      "problemMatcher": []
    },
    {
      "label": "Generate Manual Test Scenarios",
      "type": "shell",
      "command": "python ${workspaceFolder}/.cursor/scripts/test-enforcement.py",
      "args": ["--generate-manual"],
      "problemMatcher": []
    }
  ]
}



